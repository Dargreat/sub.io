{
  "version": 2,
  "builds": [
    {
      "src": "client/public/**",
      "use": "@vercel/static"
    },
    {
      "src": "client/src/**",
      "use": "@vercel/static"
    },
    {
      "src": "server/.*",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/routes/api.js",
      "methods": ["POST"]
    },
    {
      "src": "/src/(.*)",
      "dest": "client/src/$1"
    },
    {
      "src": "/(.*)",
      "dest": "client/public/$1"
    }
  ]
}
