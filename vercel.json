{
  "builds": [
    {
      "src": "client/public/**",
      "use": "@vercel/static"
    },
    {
      "src": "server/**/*.js",
      "use": "@vercel/node"
    }
  ],
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "server/routes/api.js"
    },
    {
      "src": "/(.*)",
      "dest": "client/public/index.html"
    }
  ]
}
